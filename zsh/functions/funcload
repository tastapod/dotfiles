# reload all local functions
function {
	local fn_dir="$ZSH_CUSTOM/functions"

	local fns=( "$fn_dir"/*(.N:t) )

	[[ $fns ]] ||  return 1
	
	# Make sure the functions do not already exist
	unfunction $fns 2>/dev/null

	# Load the functions from the correct place
	fpath=( "$fn_dir" ) autoload -Uz $fns
}
# vi: filetype=bash
