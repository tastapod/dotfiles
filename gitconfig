[alias]
        br = branch
        changes = diff --name-status -r
        ci = commit
        co = checkout
        diffs = diff --staged
        diffstat = diff --stat -r
        diffsw = diff --color-words --staged
        diffw = diff --color-words
        diffws = diff --color-words --staged
        l = log --oneline --graph --decorate
        lg = log --pretty=format:"%h%x20%an%x20%ad%x20%s" --date=short --reverse
        pullr = pull --rebase
        root = rev-parse --show-toplevel
        serve = daemon --reuseaddr --verbose  --base-path=. --export-all
        sm = submodule
        st = status -s
[color]
        ui = auto
        diff = auto
        status = auto
[core]
        excludesfile = ~/.cvsignore
        pager = less -F -X
        symlinks = false
[credential]
        helper = store
[diff]
        renames = true
        renameLimit = 1000
[fetch]
        prune = true
[filter "lfs"]
        process = git-lfs filter-process
        required = true
        clean = git-lfs clean -- %f
        smudge = git-lfs smudge -- %f
[init]
        defaultBranch = main
[lfs "https://devops.jio.com/"]
        locksverify = true
[lfs "https://gitlab.com/"]
        locksverify = true
[pull]
        rebase = false
[push]
        default = current
